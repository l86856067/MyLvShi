<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/danhui"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.mylvshi.view.activitys.SettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mine_set_toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:contentInsetStart="0dp"
        android:background="@color/bar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/mine_set_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/touming"
                android:src="@mipmap/ic_back_white"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="设置" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/mine_set_set"
        android:layout_below="@id/mine_set_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/mine_set_tixing"
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="非WIFI下提醒我"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <com.example.administrator.mylvshi.view.style.MyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/hui"/>
        <RelativeLayout
            android:id="@+id/mine_set_zidong"
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="WIFI下自动播放用户主页视频"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <com.example.administrator.mylvshi.view.style.MyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/hui"/>
        <RelativeLayout
            android:id="@+id/mine_set_qingchu"
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="清楚缓存"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_right"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/hui"/>
        <RelativeLayout
            android:id="@+id/mine_set_fenxiang"
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="分享给好友"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_right"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/hui"/>
        <RelativeLayout
            android:id="@+id/mine_set_gengxin"
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="版本更新"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="v3.3.0"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/hui"/>
        <RelativeLayout
            android:id="@+id/mine_set_guanyu"
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="关于我们"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_right"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/hui"/>
        <RelativeLayout
            android:id="@+id/mine_set_fankui"
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="帮助和反馈"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_right"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/mine_set_tuichu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_set_set"
        android:layout_margin="20dp"
        android:background="@color/rad"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="退出登录"/>
    <View
        android:id="@+id/mine_set_ani"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>
    
</RelativeLayout>
